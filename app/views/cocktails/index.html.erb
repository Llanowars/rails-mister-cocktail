<div class="text-center">
  <h1>List of cocktails</h1>
  <hr>
  <div class="container">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-xs-12 col-sm-3">
          <% if cocktail.photo.file.nil? %>
            <div class= "card">
              <h4><%= link_to cocktail.name, cocktail_path(cocktail) %></h4>
            </div>
          <% else %>
            <div class="card" style= "background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
            url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
              <h4><%= link_to cocktail.name, cocktail_path(cocktail) %></h4>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<hr>

<iframe src="http://www.helloholly.io/" target='_parent' style="width:100%;height:92vh;"></iframe>

<hr>
