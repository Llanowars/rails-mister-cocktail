
<%= render 'shared/banner' %>

<div class="wrapper">
  <div class="container">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-xs-12 col-sm-4">
         <div class="card" style="background-image: url('<%= image_path('background.jpg') %>');">
            <div class="card-description">
              <h2><%= cocktail.name %></h2>
            </div>
            <%= link_to "description", cocktail_path(cocktail), class: "card-link" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="text-center" id="home-bottom">
  <%= link_to "create", new_cocktail_path, class: "btn btn-danger btn-lg" %>
</div>
