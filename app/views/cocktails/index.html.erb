<div class="text-center">
  <h1>List of cocktails</h1>
  <hr>
  <div class="container">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-xs-12 col-sm-3">
          <div class="card" style="url('<%= cl_image_path @cocktail.photo, height: 300, width: 400, crop: :fill %>')">
            <h4><%= link_to cocktail.name, cocktail_path(cocktail) %></h4>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<hr>

<%= render 'cocktails/new'  %>

